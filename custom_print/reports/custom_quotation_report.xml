<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción de reporte PDF -->
    <record id="action_custom_quotation_report" model="ir.actions.report">
        <field name="name">Cotización Personalizada</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_print.custom_quotation_template</field>
        <field name="print_report_name">'Cotización - %s' % object.name</field>
    </record>

    <!-- Template principal del reporte -->
    <template id="custom_quotation_template">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <main class="page" style="font-family: Calibri, sans-serif; font-size: x-small;">
                    <!-- Datos del Cliente y de la Cotización -->
                    <div class="row">
                        <div class="col-6">
                            <strong>Cliente:</strong>
                            <span t-field="o.partner_id"/>
                            <br/>
                            <strong>Dirección:</strong>
                            <span t-out="o.partner_id._display_address()"/>
                            <br/>
                            <strong>Teléfono:</strong>
                            <span t-field="o.partner_id.phone"/>
                            <br/>
                            <strong>Correo:</strong>
                            <span t-field="o.partner_id.email"/>
                            <br/>
                        </div>
                        <div class="col-6 text-end">
                            <strong>Fecha de Cotización:</strong>
                            <span t-field="o.date_order"/>
                            <br/>
                            <strong>Válido Hasta:</strong>
                            <span t-field="o.validity_date"/>
                            <br/>
                            <strong>Vendedor:</strong>
                            <span t-field="o.user_id"/>
                            <br/>
                            <strong>Referencia:</strong>
                            <span t-field="o.client_order_ref"/>
                            <br/>
                        </div>
                    </div>

                    <hr/>

                    <!-- Tabla de productos -->
                    <table style="width: 100%; border-collapse: collapse; margin-top: 4px;">
                        <thead>
                            <tr style="border-bottom: 1px solid #ccc;">
                                <th style="width:5%; text-align: left; padding: 2px 5px;">#</th>
                                <th style="width:25%; text-align: left; padding: 2px 5px;">Producto</th>
                                <th style="width:35%; text-align: left; padding: 2px 5px;">Descripción</th>
                                <th class="text-end" style="width:10%; padding: 2px 5px;">Cantidad</th>
                                <th class="text-end" style="width:15%; padding: 2px 5px;">Precio Unitario</th>
                                <th class="text-end" style="width:10%; padding: 2px 5px;">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="idx" t-value="0"/>
                            <tr t-foreach="o.order_line" t-as="line">
                                <t t-set="idx" t-value="idx + 1"/>
                                <td style="text-align: center; padding: 2px 5px;">
                                    <span t-esc="idx"/>
                                </td>
                                <td style="padding: 2px 5px;">
                                    <span t-field="line.product_id"/>
                                </td>
                                <td style="padding: 2px 5px;">
                                    <span t-field="line.name"/>
                                </td>
                                <td class="text-end" style="padding: 2px 5px;">
                                    <span t-field="line.product_uom_qty"/>
                                </td>
                                <td class="text-end" style="padding: 2px 5px;">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-end" style="padding: 2px 5px;">
                                    <span t-field="line.price_subtotal"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Totales -->
                    <div class="text-end mt-3">
                        <p>
                            <strong>Subtotal:</strong>
                            <span t-field="o.amount_untaxed"/>
                        </p>
                        <p>
                            <strong>Impuestos:</strong>
                            <span t-field="o.amount_tax"/>
                        </p>
                        <p>
                            <strong>Total:</strong>
                            <span t-field="o.amount_total"/>
                        </p>
                    </div>

                    <!-- Notas o condiciones -->
                    <div class="mt-3">
                        <strong>Términos y condiciones:</strong>
                        <br/>
                        <span t-field="o.note"/>
                    </div>
                </main>
            </t>
        </t>
    </template>
</odoo>
