<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form_inherit_custom_print" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.custom.print</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form[hasclass('oe_form_configuration')]" position="inside">
        <div class="app_settings_block" data-string="Formato de Impresión" id="custom_print_settings">
          <h2>Formato de Impresión</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="enable_custom_print"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="enable_custom_print" string="Formato Personalizado"/>
                <div class="text-muted">
                  Activar formato personalizado para facturas y otros documentos
                </div>
                <div class="mt-2" invisible="not enable_custom_print">
                  <div class="mb-2">
                    <label for="paper_size" string="Tamaño de Papel"/>
                  </div>
                  <field name="paper_size" class="o_light_label"/>
                </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>